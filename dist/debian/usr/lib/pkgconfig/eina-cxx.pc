prefix=/usr/local/src/enlightenment.source.repo/dist/debian/usr
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Name: Eina C++
Description: A C++ binding for the Eina library
Requires.private:   eina >= 1.15.0-beta2  
Version: 1.15.0-beta2
Libs: -L${libdir} -leina  -lpthread 
Libs.private:  -lm -ldl -ldl  -lrt     -ldl
Cflags: -I${includedir}/efl-1 -I${includedir}/eo-1 -I${includedir}/eina-1 -I${includedir}/eina-1/eina -I${includedir}/eina-cxx-1 -I${includedir}/eina-cxx-1/eina-cxx
